{
  "manifest_version": 3,
  "name": "Luminate Online Page Editor",
  "version": "2.0",
  "description": "Quickly navigate to the edit page for Luminate Online content with one click.",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    },
    "default_title": "Edit this page"
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  }
}
